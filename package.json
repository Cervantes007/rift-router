{
  "name": "rift-router",
  "version": "0.2.6",
  "description":
    "Blazing Fast and Lightweight router for React - Fully Reactive Router based on state first.",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "author": "Cervantes007",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cervantes007/rift-router.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "format": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "lint": "tslint './src/**/*.{ts,tsx}'",
    "precommit": "pretty-quick --staged"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "mobx": "^4.1.1",
    "mobx-react": "^5.0.0",
    "prettier": "1.12.0",
    "pretty-quick": "^1.4.1",
    "react": "^16.3.1",
    "ts-jest": "^22.4.6",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
